<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Super Word Search"
             xmlns:webview="clr-namespace:Xam.Plugin.WebView.Abstractions;assembly=Xam.Plugin.WebView.Abstractions"
             x:Class="WordSearch.Views.HighScoresPage">
    <ContentPage.Content>
        <StackLayout x:Name="FlexScoreHeader" Orientation="Vertical" BackgroundColor="LightBlue" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
            <webview:FormsWebView x:Name="webViewHighScores" Margin="0" ContentType="LocalFile" Source="{Binding SourceHtml}" WidthRequest="{Binding HtmlPageWidth}" HeightRequest="{Binding HtmlPageHeight}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>