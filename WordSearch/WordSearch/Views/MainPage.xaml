<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WordSearch.Views.MainPage">
    <ContentPage.Resources>
        <StyleSheet Source="/Assets/Styles.css" />
    </ContentPage.Resources>
    <StackLayout Orientation="Vertical">
        <Image Source="/Assets/mainlogo.png" />
        <Button StyleClass="BlueButton" Text="New Game Easy Level" Command="{Binding NewEasyGameCommand}" HorizontalOptions="Center"></Button>
        <Button StyleClass="BlueButton" Text="New Game Medium Level" Command="{Binding NewMediumGameCommand}" HorizontalOptions="Center"></Button>
        <Button StyleClass="BlueButton" Text="New Game Hard Level" Command="{Binding NewHardGameCommand}" HorizontalOptions="Center"></Button>
    </StackLayout>

</ContentPage>
