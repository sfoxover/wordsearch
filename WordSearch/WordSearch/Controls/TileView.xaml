<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WordSearch.Controls.TileView">
  <ContentView.Content>
        <Frame OutlineColor="Black" BackgroundColor="Blue" Padding="1">
            <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" BackgroundColor="Green">
                <Label Text="{Binding Letter}" TextColor="Red" BackgroundColor="Yellow" FontSize="Micro" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"/>
            </StackLayout>
        </Frame>
    </ContentView.Content>
</ContentView>