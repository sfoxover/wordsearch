<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WordSearch.Controls.TileView"
             xmlns:localHelpers="clr-namespace:WordSearch.Helpers">
  <ContentView.Content>
        <Frame x:Name="TileFrame" BorderColor="Blue" Padding="1" CornerRadius="5" WidthRequest="{Binding TileWidth}" HeightRequest="{Binding TileHeight}">
            <Frame.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding TileClickCommand}"/>
            </Frame.GestureRecognizers>
            <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                <Label Text="{Binding Letter, Mode=TwoWay}" TextColor="Black" BackgroundColor="WhiteSmoke" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"/>
            </StackLayout>
        </Frame>
    </ContentView.Content>
</ContentView>